{
  "name": "DeepLですぐに翻訳",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "[非公式] DeepL翻訳を右クリックで行う拡張機能",
  "permissions": [
    "declarativeContent",
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action":{
    "default_popup": "popup.html",
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    }
  },
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self';"
}
